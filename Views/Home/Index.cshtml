@model BooksViewModel

<!--Loop through the data for each book-->
@foreach (Book b in Model.Books)
{
    <partial name="ProjectSummary" model="b"/>
}

<!--Set tags for different pages of books-->
<div page-books="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>
